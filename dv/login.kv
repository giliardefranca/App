<Login>:

    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos


        Label:
            text: "[color=#000000][b]Registrador De Horas[/b][/color]"
            bold: True
            markup: True
            pos_hint: {"right": .9, "top": 1.02}
            size_hint: 0.8, 0.20
            font_size:"40dp"

        Label:
            id: mensagem_login
            text: "[color=#00ADF7]Login[/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.8}
            size_hint: 0.8, 0.1
            font_size:"30dp"



        MDTextField:
            id: email_input
            hint_text: "E-mail"
            pos_hint: {"right": 0.9, "top": 0.65}
            size_hint: 0.8, 0.1
            mode: "fill"
            icon_right: "email"
            theme_text_color:'Primary'


        MDTextField:
            id: senha_input
            password: True
            hint_text: "Senha"
            pos_hint: {"right": 0.9, "top": 0.52}
            size_hint: 0.8, 0.1
            size_hint: 0.8, 0.1
            mode: "fill"
            markup: True





        MDFillRoundFlatButton:
            text: "Entrar"
            theme_text_color: "Custom"
            text_color: utils.get_color_from_hex("#FFFFFF")
            pos_hint: {"right": 0.7, "top": 0.35}
            size_hint: 0.4, 0.09
            md_bg_color: utils.get_color_from_hex("#00B7C2")
            font_size:"17dp"
            on_press: app.firebase.FazerLogin(email_input.text, senha_input.text)




        MDFillRoundFlatButton:
            text: "Registrar"
            theme_text_color: "Custom"
            text_color: utils.get_color_from_hex("#00B7C2")
            pos_hint: {"right": 0.65, "top": 0.25}
            size_hint: 0.3, 0.08
            md_bg_color: 100, 100, 100, 0.5
            font_size:"17dp"
            on_press: app.mudartela("criarconta")




        Label:
            id: mensagem_erro
            text: ""
            pos_hint: {"right": 0.89, "top": 0.44}
            size_hint: 0.8, 0.1
            font_size: "15dp"
            color: utils.get_color_from_hex("#00000")


        LabelButton:
            text: "Esqueceu sua senha?"
            pos_hint: {"right": 0.7, "top": 0.15}
            size_hint: 0.4, 0.2
            on_press:  app.mudartela("trocarsenha")
            color: utils.get_color_from_hex("#00000")










