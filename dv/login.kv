<Login>:

    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos


        Label:
            text: "[color=#000000][b]Registrador De Horas[/b][/color]"
            bold: True
            markup: True
            pos_hint: {"right": .9, "top": 1.02}
            size_hint: 0.8, 0.20
            font_size:"35dp"





        MDTextField:
            id: email_input
            hint_text: "Usu√°rio"
            pos_hint: {"right": 0.9, "top": 0.65}
            size_hint: 0.8, 0.1
            mode: "fill"
            icon_right: "account"
            theme_text_color:'Primary'


        MDTextField:
            id: senha_input
            password: True
            hint_text: "Senha"
            pos_hint: {"right": 0.9, "top": 0.52}
            size_hint: 0.8, 0.1
            size_hint: 0.8, 0.1
            mode: "fill"
            markup: True


        MDIconButton:
            icon: "eye-off"
            pos_hint: {"center_y": .5}
            pos_hint: {"right": .9, "top": 0.52}
            theme_text_color: "Hint"
            ripple_alpha: 1.0
            ripple_color: app.theme_cls.primary_color
            on_release:
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                senha_input.password = False if senha_input.password is True else True






        MDFillRoundFlatButton:
            text: "Login"
            theme_text_color: "Custom"
            pos_hint: {"right": 0.57, "top": 0.35}
            md_bg_color: app.theme_cls.primary_color
            on_release: app.firebase.FazerLogin(email_input.text, senha_input.text)




        MDFillRoundFlatButton:
            text: "Registrar"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            pos_hint: {"right": 0.60, "top": 0.25}
            md_bg_color: 100, 100, 100, 0.5
            on_press: app.mudartela("criarconta")




        Label:
            id: mensagem_erro
            text: ""
            pos_hint: {"right": 0.89, "top": 0.44}
            size_hint: 0.8, 0.1
            font_size: "15dp"
            color: utils.get_color_from_hex("#00000")


        LabelButton:
            text: "Esqueceu sua senha?"
            pos_hint: {"right": 0.7, "top": 0.15}
            size_hint: 0.4, 0.2
            on_press:  app.mudartela("trocarsenha")
            color: utils.get_color_from_hex("#00000")



        MDIconButton:
            icon: "account-circle"
            user_font_size: "90sp"
            pos_hint: {"right": .65, "top": 0.87}
            theme_text_color: "Hint"
























