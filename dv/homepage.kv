<HomePage>:
#: import WipeTransition kivy.uix.screenmanager.WipeTransition
#:import utils kivy.utils

    MDScreen:



        Label:
            text: "[color=#000000]TOTAL DE HORAS \nREGISTRADA [/color]"
            bold: True
            markup: True
            pos_hint: {"right": .90, "top": 0.8}
            size_hint: 0.8, 0.20
            font_size:"35dp"



        Label:
            text: "[color=#000000] : [/color]"
            markup: True
            pos_hint: {"right": 0.70, "top": 0.59}
            size_hint: 0.4, 0.09
            font_size:"70dp"


        TextInput:
            id: hora_input
            pos_hint: {"right": 0.48, "top": 0.6}
            size_hint: 0.30, 0.13
            background_color: utils.get_color_from_hex("#00CEFF")
            font_size:"42dp"
            halign: 'center'
            padding: "15dp"



        TextInput:
            id: minuto_input
            pos_hint: {"right": 0.82, "top": 0.6}
            size_hint: 0.30, 0.13
            background_color: utils.get_color_from_hex("#00CEFF")
            font_size:"42dp"
            halign: 'center'
            padding: "15dp"





        Label:
            id: dias_restantes
            text: ""
            pos_hint: {"right":0.55, "top":0.95}
            size_hint: 0.1, 0.1
            bold: True
            markup: True
            font_size:"30dp"
            color: utils.get_color_from_hex("#00000")

        Label:
            id: comeco
            text: ""
            pos_hint: {"right":0.54, "top":0.90}
            size_hint: 0.1, 0.1
            font_size:"20dp"
            color: utils.get_color_from_hex("#00000")


        Label:
            text: "Hora"
            pos_hint: {"right":0.38, "top":0.48}
            size_hint: 0.1, 0.1
            font_size:"20dp"
            color: utils.get_color_from_hex("#00000")


        Label:
            text: "Minuto"
            pos_hint: {"right":0.72, "top":0.48}
            size_hint: 0.1, 0.1
            font_size:"20dp"
            color: utils.get_color_from_hex("#00000")





        Label:
            id: frases
            text: "Frases Mineradas: 0"
            pos_hint: {"right":0.54, "top":0.40}
            size_hint: 0.1, 0.1
            font_size:"20dp"
            color: utils.get_color_from_hex("#00000")


        MDRoundFlatIconButton:
            pos_hint: {"right":0.65, "top":0.20}
            markup: True
            text: "[b]INSTRUÇÃO DE USO[/b]"
            icon: "alert-circle"
            text_color: "black"
            on_release: app.mudartela('instrucao')





        MDSlider:
            id: qtd
            on_active: app.Total_Frases_mineradas(*args)
            pos_hint: {"right": 0.85, "top": .52}
            size_hint: 0.7, 0.25

        MDFloatingActionButtonSpeedDial:
            data: app.data
            root_button_anim: True
            callback: app.callback
            icon:"menu"























