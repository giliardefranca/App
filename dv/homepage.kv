<HomePage>:
#: import WipeTransition kivy.uix.screenmanager.WipeTransition
#:import utils kivy.utils

    MDFloatLayout:



        Label:
            text: "[color=#000000]TOTAL DE HORAS \nREGISTRADA [/color]"
            bold: True
            markup: True
            pos_hint: {"right": .90, "top": 0.8}
            size_hint: 0.8, 0.20
            font_size:"35dp"



        Label:
            text: "[color=#000000] : [/color]"
            markup: True
            pos_hint: {"right": 0.70, "top": 0.59}
            size_hint: 0.4, 0.09
            font_size:"70dp"


        TextInput:
            id: hora_input
            pos_hint: {"right": 0.48, "top": 0.6}
            size_hint: 0.30, 0.13
            background_color: utils.get_color_from_hex("#00CEFF")
            font_size:"42dp"
            halign: 'center'
            padding: "15dp"



        TextInput:
            id: minuto_input
            pos_hint: {"right": 0.82, "top": 0.6}
            size_hint: 0.30, 0.13
            background_color: utils.get_color_from_hex("#00CEFF")
            font_size:"42dp"
            halign: 'center'
            padding: "15dp"





        MDFloatingActionButton:
            pos_hint: {"right":.96, "top":0.4}
            icon: "plus"
            md_bg_color: 0, 0, 0, 0
            on_release: app.show_time_picker()
            ripple_alpha: 0.8




        MDIconButton:
            pos_hint: {"right":.96, "top":.3}
            icon: "delete-forever"
            theme_text_color: "Custom"
            on_release: app.dialogConfirmacao()
            text_color: utils.get_color_from_hex("#ffffff")
            md_bg_color: app.theme_cls.primary_color
            ripple_alpha: 0.8




        MDIconButton:
            icon: "cog-outline"
            theme_text_color: "Custom"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"right":.96, "top":.1}
            on_press:
                root.manager.transition.direction = "up"
                app.mudartela("addhora")
            ripple_alpha: 1.5
            text_color: utils.get_color_from_hex("#ffffff")



        MDIconButton:
            icon: "calendar"
            text: "Data de inicio"
            theme_text_color: "Custom"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"right":.96, "top":.2}
            on_press: app.data_inicio()
            text_color: utils.get_color_from_hex("#ffffff")






        Label:
            id: dias_restantes
            text: ""
            pos_hint: {"right":0.55, "top":0.95}
            size_hint: 0.1, 0.1
            bold: True
            markup: True
            font_size:"30dp"
            color: utils.get_color_from_hex("#00000")

        Label:
            id: comeco
            text: ""
            pos_hint: {"right":0.54, "top":0.90}
            size_hint: 0.1, 0.1
            font_size:"20dp"
            color: utils.get_color_from_hex("#00000")


        Label:
            text: "Hora"
            pos_hint: {"right":0.38, "top":0.48}
            size_hint: 0.1, 0.1
            font_size:"20dp"
            color: utils.get_color_from_hex("#00000")

        Label:
            text: "Minuto"
            pos_hint: {"right":0.72, "top":0.48}
            size_hint: 0.1, 0.1
            font_size:"20dp"
            color: utils.get_color_from_hex("#00000")


        MDProgressBar:
            id: progress
            value: 0
            pos_hint: {"right": 1.0, "top":1.5}

        Label:
            id: porcentagem
            text: "0% Progresso"
            pos_hint: {"right": 1.0, "top":1.47}
            color: utils.get_color_from_hex("#00000")

        Label:
            id: frases
            text: "Frases Mineradas: 0"
            pos_hint: {"right":0.54, "top":0.40}
            size_hint: 0.1, 0.1
            font_size:"20dp"
            color: utils.get_color_from_hex("#00000")




        MDSlider:
            id: qtd
            on_active: app.Total_Frases_mineradas(*args)
            pos_hint: {"right": 0.85, "top": .52}
            size_hint: 0.7, 0.25


































