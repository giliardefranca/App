<criarconta>:


    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos


        Label:
            id: criarconta
            text: "[color=#00ADF7]Criar Conta[/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.60, "top": .9}
            size_hint: 0.8, 0.1
            font_size:"30dp"



        MDTextField:
            id: email_input
            hint_text: "E-mail"
            pos_hint: {"right": 0.9, "top": 0.80}
            size_hint: 0.8, 0.1




        MDTextField:
            id: senha_input
            password: True
            hint_text: "Senha"
            pos_hint: {"right": 0.9, "top": 0.65}
            size_hint: 0.8, 0.1
            size_hint: 0.8, 0.1


        MDIconButton:
            pos_hint: {"right":0.9, "top":.97}
            icon: "chevron-left"
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            text_color: utils.get_color_from_hex("#00ADF7")
            pos_hint: {"right": 0.15, "top": .97}
            on_release: app.mudartela('login')




        MDFillRoundFlatButton:
            text: "Criar Conta"
            theme_text_color: "Custom"
            text_color: utils.get_color_from_hex("#FFFFFF")
            pos_hint: {"right": 0.54, "top": 0.5}
            size_hint: 0.4, 0.09
            md_bg_color: utils.get_color_from_hex("#00B7C2")
            font_size:"17dp"
            on_press: app.firebase.CriarConta(email_input.text, senha_input.text)


        Label:
            id: mensagem_erro
            text: ""
            pos_hint: {"right": 0.89, "top": 0.55}
            size_hint: 0.8, 0.1
            font_size: "15dp"
            color: utils.get_color_from_hex("#00000")










