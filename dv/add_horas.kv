<AddHora>:


#:import utils kivy.utils
    MDFloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#EBE4E0")
            RoundedRectangle:
                size: self.size
                pos: self.pos


        Label:
            id: mensagem_erro
            text: ""
            bold: True
            markup: True
            pos_hint: {"right": 0.89, "top": 0.73}
            size_hint: 0.8, 0.1
            font_size: "15dp"

        Label:
            text: "[color=#03768A]Adicione[/color]\n [color=#000000] Horas/Minutos [/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": .95}
            size_hint: 0.8, 0.20
            font_size:"45dp"

        Label:
            text: "[color=#5A5E54] : [/color]"
            bold: True
            markup: True
            pos_hint: {"right": 0.68, "top": 0.61}
            size_hint: 0.4, 0.09
            font_size:"85dp"


        MDTextField:
            id: hora_input
            hint_text: "Add\nHoras"
            pos_hint: {"right": 0.45, "top": 0.6}
            size_hint: 0.4, 0.09
            font_size:"25dp"
            line_color_focus: utils.get_color_from_hex("#00B7C2")
            mode: "fill"
            icon_right: "clock"
            icon_right_color: app.theme_cls.primary_color
            theme_text_color:'Primary'




        MDTextField:
            id: minuto_input
            hint_text: "Add\nMinutos"
            pos_hint: {"right": 0.90, "top": 0.6}
            size_hint: 0.4, 0.09
            mode: "fill"
            font_size: "25dp"
            icon_right: "clock"
            icon_right_color: app.theme_cls.primary_color
            line_color_focus: utils.get_color_from_hex("#00B7C2")


        FloatLayout:
            pos_hint: {"right":1, "top":0.07}
            size_hint: 1, 0.2
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos


            ImageButton:
                pos_hint: {"right":0.65, "top":3.1}
                size_hint: 0.25, 0.3
                source: "icones/add2.png" if self.state == "normal" else "icones/add2_apert.png"
                on_press: app.Adicionar_horas()


            Label:
                pos_hint: {"right":0.55, "top":0.86}
                size_hint: 0.1, 0.1
                text: "Giliarde Franca [color=#00cfdb]\n Â© 2022 [/color]"
                bold: True
                markup: True
                font_size:"15dp"


            ImageButton:
                pos_hint: {"right":0.3, "top":0.98}
                size_hint: 0.4, 0.35
                source: "icones/voltar.png"
                on_release: app.mudartela("homepage")







