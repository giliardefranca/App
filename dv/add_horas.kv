#:import utils kivy.utils
    MDFloatLayout:

        canvas:
            Color:
                rgb: utils.get_color_from_hex("#EBE4E0")
            RoundedRectangle:
                size: self.size
                pos: self.pos




        Label:
            text: "[color=#000000] Coloque aqui a quantidade de dias \n Perdido de [color=#00B7C2]MAR[/color] para compensar"
            pos_hint: {"right": 0.9, "top": .85}
            size_hint: 0.8, 0.20
            font_size:"30dp"
            markup: True




        MDIconButton:
            pos_hint: {"right":0.9, "top":.97}
            icon: "chevron-left"
            theme_text_color: "Custom"
            text_color: utils.get_color_from_hex("#00ADF7")
            pos_hint: {"right": 0.15, "top": .97}
            on_release: app.mudartela('homepage')





        TextInput:
            id: padrao
            on_text: app.stored_text = self.text
            size_hint: 0.16, 0.06
            pos_hint: {"right": .53, "top": 0.65}
            font_size: "20dp"


        MDIconButton:
            pos_hint: {"right":0.48, "top":.18}
            icon: "exit-to-app"
            markup: True
            text_color: utils.get_color_from_hex("#00ADF7")
            theme_text_color: "Custom"
            on_release: app.mudartela("login")
            user_font_size: "30sp"

        MDIconButton:
            icon: "check"
            theme_text_color: "Custom"
            pos_hint: {"right": .59, "top": 0.67}
            on_press: app.Definir_dias_mar()
            user_font_size: "35sp"
            text_color: utils.get_color_from_hex("#00ADF7")












